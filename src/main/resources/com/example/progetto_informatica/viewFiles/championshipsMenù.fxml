<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import java.net.URL?>
<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" spacing="20" styleClass="main-container" fx:controller="com.example.progetto_informatica.controller.AllChampionshipsMenùController">
    <stylesheets>
        <URL value="@../cssFiles/championshipsMenùStyle.css"/>
    </stylesheets>

    <HBox spacing="10" styleClass="button-container">
        <Button text="Nuovo Campionato" styleClass="action-button" onAction="#handleAddTournament"/>
    </HBox>

    <ScrollPane fitToWidth="true" styleClass="scroll-pane" VBox.vgrow="ALWAYS" fx:id="scrollPane">
        <VBox spacing="15" styleClass="tournaments-list" fx:id="championshipAnchor">
        </VBox>
    </ScrollPane>
</VBox>