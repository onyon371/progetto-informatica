<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" spacing="20" styleClass="main-container" fx:controller="com.example.progetto_informatica.controller.SavedPilotsController">
    <stylesheets>
        <URL value="@../cssFiles/savedPilots.css"/>
    </stylesheets>

    <!-- Action Buttons -->
    <HBox spacing="10" styleClass="button-container">
        <Button text="Crea Nuovo Pilota" styleClass="action-button" onAction="#handleCreateNewPilot"/>
    </HBox>

    <!-- Tournaments Container with ScrollPane -->
    <ScrollPane fitToWidth="true" styleClass="scroll-pane" VBox.vgrow="ALWAYS" fx:id="scrollPane">
        <VBox spacing="15" styleClass="pilots-list" fx:id="pilotsAnchor">
            <!-- Tournaments will be added here dynamically -->
        </VBox>
    </ScrollPane>
</VBox>