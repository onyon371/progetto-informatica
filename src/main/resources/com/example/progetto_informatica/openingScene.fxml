<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.progetto_informatica.openingSceneController">
    <top>
        <MenuBar>
            <Menu text="File">
                <MenuItem text="Nuovo Campionato" />
                <MenuItem text="Apri Campionato" />
                <MenuItem text="Salva" />
                <SeparatorMenuItem />
                <MenuItem text="Esci" />
            </Menu>
            <Menu text="Modifica">
                <MenuItem fx:id="item_aggiungiPartecipante" text="Aggiungi Partecipante" />
                <MenuItem fx:id="item_rimuoviPartecipante" text="Rimuovi Partecipante" />
            </Menu>
            <Menu text="Aiuto">
                <MenuItem text="Informazioni" />
            </Menu>
        </MenuBar>
    </top>

    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="AS_NEEDED" vbarPolicy="AS_NEEDED">
            <HBox fx:id="championshipsContainer" alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #f4f4f4;">
                <padding>
                    <Insets bottom="20" left="20" right="20" top="20" />
                </padding>
                <!-- I campionati verranno aggiunti dinamicamente qui -->
                <Button onAction="#handleAddChampionship" style="-fx-font-size: 20px; -fx-min-width: 50px; -fx-min-height: 50px;" text="+" />
            </HBox>
        </ScrollPane>
    </center>

    <bottom>
        <HBox alignment="CENTER_LEFT" style="-fx-background-color: #e0e0e0;">
            <padding>
                <Insets bottom="5" left="5" right="5" top="5" />
            </padding>
            <Label fx:id="statusLabel" text="Pronto" />
            <Pane HBox.hgrow="ALWAYS" />
            <Label fx:id="statusDateTimeLabel" style="-fx-font-style: italic;" />
        </HBox>
    </bottom>
</BorderPane>
